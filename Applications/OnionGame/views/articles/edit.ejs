<div class='data-form'>
    <form class="form-signin" method="POST" action="<%= `/articles/${article._id}/update?_method=PUT`  %> ">
        <h2 class='form-signin-heading'>Edit article:</h2>
        <label for="inputTitle">Title</label>
        <input type="text" name='title' id='inputTitle' class='form-control' value="<%= article.title  %> " placeholder = 'Title' autofocus>
        <label for="inputReal">Is the article real?</label>
        <input type="text" name='real' id='inputReal' class='form-control' value="<%= article.real %> " placeholder = "yes" required>
        <button class='btn btn-lg btn-primary btn-block' type='submit'>Save</button>
    </form>
</div>