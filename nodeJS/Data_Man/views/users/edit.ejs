<div class='data-form'>
    <form class="form-signin" action="<%= `/users/${user._id}/update?_method=PUT`  %> " method="POST">
        <h2 class='form-signin-heading'>Edit user:</h2>
        <label for="inputFirstName">First Name</label>
        <input id="inputFirstName" name="first" class="form-control" value="<%= user.name.first %> " placeholder="First" type="text" autofocus>
        <label for="inputLastName">Last Name</label>
        <input id="inputLastName" name="last" class="form-control" value="<%= user.name.last %> " placeholder="Last" type="text" required>
        <label for="inputPassword">Password</label>
        <input id="inputPassword" name="password" class="form-control" value="<%= user.password %> " placeholder="Password" type="password" required>
        <label for="inputEmail">Email address</label>
        <input id="inputEmail" type="email" name="email" class="form-control" value="<%= user.email  %> " placeholder="Email address" required>
        <label for="inputZipCode">Zip Code</label>
        <input id="inputZipCode" name="zipCode" type="text" pattern="[0-9]{5}" class="form-control" value="<%= user.zipCode %> " placeholder="Zip Code" required>
        <br /> <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
</div>