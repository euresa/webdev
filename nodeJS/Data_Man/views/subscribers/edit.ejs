<div class='data-form'>
    <form class="form-signin" action="<%= `/subscribers/${subscriber._id}/update?_method=PUT`  %> " method="POST">
        <h2 class='form-signin-heading'>Edit subscriber:</h2>
        <label for="inputName">Name</label>
        <input id="inputName" name="name" class="form-control" value="<%= subscriber.name %> " placeholder="Name"
            type="text" autofocus>
        <label for="inputEmail">Email address</label>
        <input id="inputEmail" type="email" name="email" class="form-control"
            value="<%= subscriber.email  %> " placeholder="Email address">
        <label for="inputZipCode">Zip Code</label>
        <input id="inputZipCode" name="zipCode" type="text" pattern="[0-9]{5}" class="form-control" value="<%= subscriber.zipCode %> "
            placeholder="Zip Code" required>
        <br /> <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
</div>