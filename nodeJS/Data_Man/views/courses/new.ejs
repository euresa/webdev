<div class='data-form'>
    <form class="form-signin" action="<%= `/courses/create`  %> " method="POST">
        <h2 class='form-signin-heading'>Create a new course:</h2>
        <label for="inputTitle">Title</label>
        <input id="inputTitle" name="title" class="form-control" value="<%= course.title %> " placeholder="Title"
            type="text" autofocus>
        <label for="inputDescription">Description</label>
        <input id="inputDescription" type="text" name="description" class="form-control"
            value="<%= course.description  %> " placeholder="Description">
        <label for="inputMaxStudents">Max Students</label>
        <input id="inputMaxStudents" type="text" class="form-control" value="<%= course.maxStudents  %> "
            placeholder="Max Students" required>
        <label for="inputCost">Cost</label>
        <input id="inputCost" name="cost" type="text" pattern="\d*" class="form-control" value="<%= course.cost %> "
            placeholder="Cost" required>
        <br /> <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
</div>